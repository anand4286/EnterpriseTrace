# Enterprise TSR System Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=8080
HOST=localhost

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tsr_enterprise
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tsr_enterprise

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_BASE_URL=http://localhost:8080/api
FRONTEND_URL=http://localhost:3000

# Email Configuration (for invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@company.com

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Monitoring & Health Check
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION=true

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# External Services
SLACK_WEBHOOK_URL=
EMAIL_SERVICE_API_KEY=

# OpenShift/Kubernetes
OPENSHIFT_SERVER=
OPENSHIFT_TOKEN=

# Testing
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/rtm_test
TEST_TIMEOUT=30000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
