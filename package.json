{
  "name": "enterprise-trace",
  "version": "1.0.0",
  "description": "Enterprise-scale requirement traceability matrix system with comprehensive project management capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "PORT=8081 nodemon --exec ts-node src/index.ts",
    "dev:frontend": "cd frontend && npm start",
    "dev:clean": "pkill -f 'node.*808[01]' || true && npm run dev",
    "dev:enterprise": "concurrently \"npm run enterprise\" \"npm run dev:frontend\"",
    "enterprise": "nodemon --exec ts-node src/enterprise-server.ts",
    "enterprise:demo": "node enterprise-demo.js",
    "enterprise:prod": "node dist/enterprise-server.js",
    "db:migrate": "./scripts/migrate-database.sh",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:api": "jest tests/api/",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t tsr-enterprise .",
    "docker:run": "docker run -p 3000:3000 -p 8080:8080 tsr-enterprise",
    "deploy:staging": "kubectl apply -f k8s/staging/",
    "deploy:production": "kubectl apply -f k8s/production/"
  },
  "keywords": [
    "openapi",
    "traceability",
    "testing",
    "dashboard",
    "playwright"
  ],
  "author": "TSR Team",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@playwright/test": "^1.37.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "elasticsearch": "^16.7.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "react-scripts": "^5.0.1",
    "redis": "^4.7.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-parser": "^10.0.3",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0",
    "yaml": "^2.3.2"
  }
}
